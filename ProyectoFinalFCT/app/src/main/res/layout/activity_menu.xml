<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">

    <TableLayout
        android:layout_width="243dp"
        android:layout_height="389dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgCalendario"
                android:layout_width="122dp"
                android:layout_height="130dp"
                android:scaleType="centerInside"
                tools:srcCompat="@drawable/calendario" />

            <ImageView
                android:id="@+id/imgVaca"
                android:layout_width="122dp"
                android:layout_height="130dp"
                android:scaleType="centerInside"
                tools:srcCompat="@tools:sample/avatars" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgHextra"
                android:layout_width="122dp"
                android:layout_height="130dp"
                android:scaleType="centerInside"
                tools:srcCompat="@drawable/horasextras" />

            <ImageView
                android:id="@+id/imgFichar"
                android:layout_width="122dp"
                android:layout_height="130dp"
                android:scaleType="centerInside"
                tools:srcCompat="@drawable/horariotrabajo" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="87dp">

            <ImageView
                android:id="@+id/imgNotifi"
                android:layout_width="122dp"
                android:layout_height="130dp"
                android:scaleType="centerInside"
                tools:srcCompat="@drawable/notificacion" />

            <ImageView
                android:id="@+id/imgMedico"
                android:layout_width="122dp"
                android:layout_height="130dp"
                android:scaleType="centerInside"
                tools:srcCompat="@drawable/juslaboral" />

        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>